@startuml
class product {
    -id: int
    -title: String
    -description: String
    -price: double
    -imageUrl: String
    -isFavorite: bool
    +product(id: int, title: string, description: String,
    price: double, imageUrl: String, isFavorite: bool ): void
}
class product_Item extends product {
    -id: int
    -title: String
    -imageUrl: String
    -description: String
    +product_Item(id: int, title: string, description: String,
    imageUrl: String): void
    +build(context: BuildContext): GridTile
}
class product_overview extends product{
    +loadedProducts: List<product>

    +product_overview(loadedProducts:: List<product>): void
    +build(context: BuildContext): Scaffold
}
class product_detail extends product_overview{
    -title : String
    -description: String

    +product_detail(id: int, title: string, description: String,)
    +build(context: BuildContext): Scaffold
}
@enduml